<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="movie_detail_text">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">#515151</item>
    </style>
    <style name="movie_title_detail_text" parent="movie_detail_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="movie_detail_text_author" parent="movie_detail_text">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="user_reviews" parent="movie_detail_text">
        <item name="android:textStyle">italic</item>
        <item name="android:maxLines">2</item>
    </style>
    <style name="movie_overview" parent="movie_detail_text">
        <item name="android:maxLines">5</item>
    </style>
    <style name="movie_detail_text_sup" parent="movie_detail_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#6ab344</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="movie_detail_text_overview" parent="movie_detail_text">
        <item name="android:lineSpacingExtra">12dp</item>
    </style>
    <style name="fab_icons">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:visibility">invisible</item>
    </style>
    <style name="card_list_view">
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>
    <style name="card_view">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="read_more" parent="movie_detail_text">
        <item name="android:textColor">@color/anchorBlue</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="empty_view">
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">invisible</item>
    </style>
    <style name="multi_fragments">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
    </style>

</resources>
